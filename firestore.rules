rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidUser() {
      return isAuthenticated() &&
             request.resource.data.keys().hasAll(['uid', 'email', 'displayName', 'createdAt']) &&
             request.resource.data.uid == request.auth.uid &&
             request.resource.data.email == request.auth.token.email;
    }

    function isValidZoo() {
      return isAuthenticated() &&
             request.resource.data.keys().hasAll(['userId', 'userName', 'isPublic', 'lastUpdated']) &&
             request.resource.data.userId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();

      // Users can only create their own profile with valid data
      allow create: if isOwner(userId) && isValidUser();

      // Users can only update their own profile
      allow update: if isOwner(userId) &&
                       request.resource.data.uid == resource.data.uid &&
                       request.resource.data.email == resource.data.email &&
                       request.resource.data.createdAt == resource.data.createdAt;

      // Users can only delete their own profile
      allow delete: if isOwner(userId);
    }

    // Zoos collection
    match /zoos/{userId} {
      // Authenticated users can read public zoos or their own zoo
      allow read: if isAuthenticated() &&
                     (resource.data.isPublic == true || isOwner(userId));

      // Users can only create their own zoo with valid data
      allow create: if isOwner(userId) && isValidZoo();

      // Users can only update their own zoo
      allow update: if isOwner(userId) &&
                       request.resource.data.userId == resource.data.userId;

      // Users can only delete their own zoo
      allow delete: if isOwner(userId);
    }

    // Optional: Analytics/Stats collection (if you add it later)
    match /stats/{statId} {
      // Anyone can read stats
      allow read: if isAuthenticated();

      // Only authenticated users can write stats
      allow write: if isAuthenticated();
    }

    // Optional: Comments collection (for future feature)
    match /comments/{commentId} {
      // Anyone can read comments
      allow read: if isAuthenticated();

      // Users can create comments with their own userId
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Users can only update/delete their own comments
      allow update, delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;
    }

    // Optional: Achievements collection (for future feature)
    match /achievements/{userId} {
      // Anyone can read achievements
      allow read: if isAuthenticated();

      // Only the owner can write achievements
      allow write: if isOwner(userId);
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
